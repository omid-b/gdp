#btn_showmap:enabled {
	font-weight: bold;
    background-color: #1C63F0;
    color: white;
    min-height: 15px;
    margin-top: 10px;
    margin-left: 7px;
    margin-right: 7px;
    padding-top: 5px;
    padding-bottom: 5px;
}

#btn_showmap:enabled::hover {
    background-color: #4584FF;
}

#btn_showmap:disabled {
    min-height: 15px;
    margin-top: 10px;
    margin-left: 7px;
    margin-right: 7px;
    padding-top: 5px;
    padding-bottom: 5px;
}


QFrame{
    background-color: #EEE;
/*    border: 5px dashed red;*/
}

QWidget{
    background-color: #EEE;
}

QLabel {
    color: #000;
    min-height: 18px;
}

QLineEdit {
    min-height: 20px;
    margin: 0;
    padding: 0;
    padding-left: 5px;
    padding-right: 5px;
    margin-left: 5px;
    margin-right: 5px;
    background-color: #FFF;
    color: #000;
    border: 1px solid #AAA;
}


QPushButton {
    color: #999;
    margin-left: 2px;
    margin-right: 2px;
    padding-right: 5px;
    padding-left: 5px;
    padding-bottom: 2px;
}

#btn_sac2ncf_add, #btn_sac2ncf_remove,
#btn_mseed2sac_add, #btn_mseed2sac_remove{
    border: none;
    padding: 0;
}

QComboBox, QSpinBox, QDoubleSpinBox {
    color: #000;
    background-color: #FFF;
}

QSpinBox, QDoubleSpinBox{
    border: 1px solid #AAA;
    min-height: 18px;
}


QAbstractItemView, QListView {
    color: #FFF;
    background-color : #333;
}

#scroll_mseed2sac, #scroll_sac2ncf {
    border: none;
}




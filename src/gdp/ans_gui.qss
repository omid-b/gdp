#le_startdate {
    max-width: 110px;
}


#le_enddate {
    max-width: 110px;
}

#le_minlat {
    max-width: 110px;
}

#le_maxlat {
    max-width: 110px;
}

#le_minlon {
    max-width: 110px;
}

#le_maxlon {
